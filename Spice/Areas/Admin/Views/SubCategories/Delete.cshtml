@model SubCategory
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Delete Sub Category</h2>

<form method="post" asp-action="Delete">
    <div class="border background-white">
        <input type="hidden" asp-for="@Model.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                <label asp-for="@Model.Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-8 col-md-7 col-lg-6 col-xl-5">
                <input asp-for="@Model.Category.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                <label asp-for="@Model.Name" class="col-form-label"></label>
            </div>
            <div class="col-8 col-md-7 col-lg-6 col-xl-5">
                <input asp-for="@Model.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-4 col-8 col-md-7 col-lg-6 col-xl-5">
                <partial name="_DeleteAndBackToListButtonsPartial" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
