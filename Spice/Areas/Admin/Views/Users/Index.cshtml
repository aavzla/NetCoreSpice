@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="border background-white">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Users List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fas fa-plus"></i> New User</a>
            </div>
        </div><br />
        <div>
            @if (Model.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.PhoneNumber)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                @category.Email
                            </td>
                            <td>
                                @category.PhoneNumber
                            </td>
                            <td>
                                <a asp-action="Lock" asp-route-id="@category.Id" class="btn btn-success text-white"><i class="fas fa-lock-open"></i></a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No category exists. Please create one.</p>
            }
        </div>
    </div>

