@model ShoppingCart
@{
    ViewData["Title"] = "Item Details";
}

<h2 class="text-info">Item Details</h2>
<form method="post" asp-action="Details">
    <div class="border background-white row">
        <input type="hidden" asp-for="MenuItemId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 pb-4 d-md-none">
            <img src="@Model.MenuItem.ImagePath" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
        <div class="col-12 col-md-8">
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="MenuItem.Name" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <input asp-for="MenuItem.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="MenuItem.Description" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <div class="border p-2">
                        @Html.Raw(Model.MenuItem.Description)
                    </div>
                </div>
                <div class="offset-md-1 offset-xl-2 col-auto mt-1">
                    <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="MenuItem.Price" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <input asp-for="MenuItem.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="MenuItem.CategoryId" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="MenuItem.SubCategoryId" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="MenuItem.Spicyness" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <select asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" disabled class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-md-1 col-md-3 offset-xl-2 col-xl-2">
                    <label asp-for="Count" class="col-form-label text-info font-weight-bold"></label>
                </div>
                <div class="col-8 col-lg-7">
                    <input asp-for="Count" class="form-control" />
                </div>
                <div class="offset-md-1 offset-xl-2 col-auto mt-1">
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-3 offset-lg-1 d-none d-md-block">
            <img src="@Model.MenuItem.ImagePath" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
        <div class="col-12 col-md-8">
            <div class="offset-4 col-8 col-lg-7">
                <div class="row">
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary form-control" value="Add to Shopping Cart">Add to Shopping Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}