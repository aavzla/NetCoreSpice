@model Spice.Models.ViewModels.OrderShoppingCartsViewModel

@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    @if (Model.ShoppingCarts.Any())
    {
        <br />
        <input id="ApplicationUserId" asp-for="@Model.ShoppingCarts[0].ApplicationUserId" hidden />
        <div class="background-white-boder-grey">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp; Order Summary
                        </div>
                        <div class="col-6 text-right">
                            <a asp-area="Customer" asp-controller="ShoppingCarts" asp-action="Index" class="btn btn-outline-info btn-sm">Back to Shopping Cart</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">PickUp Details:</span>
                                        </h4>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Name</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="txtName" asp-for="@Model.OrderInfo.PickUpName" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Phone</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="txtPhone" asp-for="@Model.OrderInfo.PhoneNumber" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Date</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="datepicker" asp-for="@Model.OrderInfo.PickUpDate" value="" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Time</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="timepicker" asp-for="@Model.OrderInfo.PickUpTime" value="" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Additional Instructions: </label>
                                        </div>
                                        <div class="col-9">
                                            <textarea asp-for="@Model.OrderInfo.Comments" style="height:100px;" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{ var total = 0.0;}

                                        @foreach (var details in Model.ShoppingCarts)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@details.MenuItem.Name</h6>
                                                    <small class="text-muted">Quantity: @details.Count</small>
                                                </div>
                                                <span class="text-muted">$@(Math.Round(details.MenuItem.Price * details.Count, 2))</span>
                                                @{ total += (details.MenuItem.Price * details.Count); }
                                            </li>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(Model.OrderInfo.CouponCode))
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div class="text-success">
                                                    <h6 class="my-0">Promo Code</h6>
                                                    <small class="text-success">@Model.OrderInfo.CouponCode</small>
                                                </div>
                                                <span class="text-success">-$@(Math.Round(total - Model.OrderInfo.OrderTotal, 2))</span>
                                            </li>
                                        }
                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <small class="text-info">Total (USD)</small>
                                            <strong class="text-info">$@(Math.Round(Model.OrderInfo.OrderTotal, 2))</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 col-md-4 offset-md-8">
                                @{
                                    var OrderTotalForStrip = Model.OrderInfo.OrderTotal * 100;
                                }

                                @*<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                            data-key="@Stripe.Value.PublishableKey"
                                            data-amount="@OrderTotalForStrip"
                                            data-name="Spice Restaurant"
                                            data-label="Place Order"
                                            data-description="Good Food, Good Mood."
                                            data-locale="auto"
                                            data-allow-remember-me="false"
                                            data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                                    </script>*@
                                <script>
                                    //document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
                                </script>
                                <button type="submit" id="btnPlaceOrder" onclick="return validateInput()" value="Place Order" class="btn btn-success form-control">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>No menu items hasn't been added to the shopping cart. Please do.</div>
    }
</form>

@section Scripts {
    <script>
        $(function () {
            var minDt = 0;
            var currentTime = getTimeFromCurrentDate();
            var currentTimeHour = parseInt(currentTime.substring(0, currentTime.lastIndexOf(':')));
            if (currentTimeHour >= 20) {
                minDt = 1;
            }

            $("#datepicker").datepicker({ minDate: minDt, maxDate: "+1W" });
            $("#timepicker").timepicker({ 'minTime': '11:00 AM', 'maxTime': '9:00 PM', step: '30' })
        });

        function setPickUpTime() {
            var dateSelected = document.getElementById("datepicker").value;
            var dt = new Date(dateSelected);
            var today = new Date();
            //Set up the hours of the selected day to zero will place the selected day at mid-night and it will help deciding if the day selected is today.
            dt.setHours(0, 0, 0, 0);
            if (dt > today) {
                selectedTime = '11:00am';
            }
            else {
                selectedTime = getTimeFromCurrentDate();
            }
            $('#timepicker').timepicker('option', 'minTime', selectedTime);
        }

        function getTimeFromCurrentDate() {
            var curDt = new Date();
            var minTime = "";
            if (curDt.getHours() < 11) {
                minTime = '12:00pm';
            }
            else {
                if (curDt.getMinutes() < 30) {
                    minTime = (curDt.getHours() + 1).toString() + ':30pm'
                }
                else {
                    minTime = (curDt.getHours() + 2).toString() + ':00pm'
                }
            }
            return minTime;
        }

        $('#datepicker').change(function () {
            setPickUpTime();
        });

        function validateInput() {
            var name = document.getElementById("txtName").value;
            var phone = document.getElementById("txtPhone").value;
            var dt = document.getElementById("datepicker").value;
            var time = document.getElementById("timepicker").value;
            var msg = '';

            if (time.toString() == ''
                || dt.toString() == ''
                || name.toString() == ''
                || phone.toString() == '') {
                msg = 'Please select the following fields:\n';
            }

            if (name.toString() == '') {
                msg += "* Pickup Name\n";
            }
            if (phone.toString() == '') {
                msg += "* Phone Number\n";
            }
            if (dt.toString() == '') {
                msg += "* Pickup Date\n";
            }
            if (time.toString() == '') {
                msg += "* Pickup Time\n";
            }

            if (msg != '') {
                alert(msg);
                return false;
            }
            return true;
        }

    </script>
}